
<%= form_with(model: space, local: true) do |form| %>
  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="text-center m-5">
      <div class="form-group">
        <%= form_with model: space, local: true do |f| %>
          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title, class: "form-control", id: "exampleFormControlInput1" %>
          </p>
          <p>
            <%= f.label :description  %><br>
            <%= f.text_area :description,class: "form-control", id: "exampleFormControlTextarea1"%>
          </p>
          <p>
            <%= f.label :address %><br>
            <%= f.text_area :address, class: "form-control", id: "exampleFormControlInput1" %>
          </p>
          <p>
            <%= f.label :post_code %><br>
            <%= f.text_area :post_code, class: "form-control", id: "exampleFormControlInput1" %>
          </p>
          <p> 
            <%= f.label :size %><br> 
            <% for option in sizes %>
              <%= f.radio_button :size, option %>
              <%= f.label "size_#{option}".to_sym, option %>
            <% end %>
          </p>
          <p>
            <%= f.label :contact_info %><br>
            <%= f.text_area :contact_info, class: "form-control", id: "exampleFormControlInput1"  %>
          </p>
          <p>
            <%= f.label :price%><br>
            <%= f.text_area :price, class: "form-control", id: "exampleFormControlInput1"  %>
          </p>
          <p>
            <%= f.label :space_type %><br> 
            <% for option in spaces_types %>
              <%= f.radio_button :space_type, option %>
              <%= f.label "space_type_#{option}".to_sym, option %>
            <% end %>
          </p>
          <p>
           <%= f.collection_check_boxes :product_ids, products, :id, :name %>
          </p>
          <p>
            <%= form.label :image %>
            <%= form.file_field :image, accept: "image/png,image/gif,image/jpeg,image/jpg" %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>