<div class="container">
  <div class="text-center m-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>
      <h2 class="form-form-group-heading">Log In</h2>
      <div class="field">
        <%= f.label :email, "Email Address", class: "sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
      </div>
      <div class="field">
        <%= f.label :password, "Password", class: "sr-only" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox mb-3" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log In", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


  